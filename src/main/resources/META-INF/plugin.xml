<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>com.github.burkclik.asplugin</id>
    <name>Regression-Test</name>
    <vendor>burkclik</vendor>

    <depends>com.intellij.modules.platform</depends>
    <depends>org.jetbrains.android</depends>
    <depends>org.jetbrains.plugins.terminal</depends>

    <extensions defaultExtensionNs="com.intellij">
        <applicationService serviceImplementation="com.github.burkclik.asplugin.services.MyApplicationService"/>
        <projectService serviceImplementation="com.github.burkclik.asplugin.services.MyProjectService"/>
        <notificationGroup id="Custom Notification Group" displayType="BALLOON" key="notification.group.name"/>
    </extensions>

    <applicationListeners>
        <listener class="com.github.burkclik.asplugin.listeners.MyProjectManagerListener"
                  topic="com.intellij.openapi.project.ProjectManagerListener"/>
    </applicationListeners>
    <actions>
        <!--        <action id="com.github.burkclik.asplugin.actions.ReferanceAction"-->
        <!--                class="com.github.burkclik.asplugin.actions.ReferanceAction" text="Run Regression Test"-->
        <!--                description="Run Regression Test">-->
        <!--            <add-to-group group-id="RunTestGroup" anchor="last"/>-->
        <!--        </action>-->
        <action id="com.github.burkclik.asplugin.actions.ReferanceAction"
                class="com.github.burkclik.asplugin.actions.ReferanceAction" text="Run Regression Test"
                description="Run regression Test">
            <add-to-group group-id="EditorPopupMenu" anchor="last"/>
        </action>

        <action id="com.github.burkclik.asplugin.actions.CopyReferenceAction"
                class="com.github.burkclik.asplugin.actions.CopyReferenceAction" text="Copy UI Test Function Path"
                description="Copy function references for UI test">
            <add-to-group group-id="EditorPopupMenu" anchor="last"/>
        </action>

        <group
            id="org.intellij.sdk.action.ModuleGroupedActions"
            text="Module Gradle Task"
            popup="true">
            <add-to-group group-id="ProjectViewPopupMenuModifyGroup" anchor="last"/>

            <action id="com.github.burkclik.asplugin.module.action.KtlintCheckAction"
                    class="com.github.burkclik.asplugin.module.action.KtlintCheckAction"
                    text="Run KtlintCheck Gradle Task">
            </action>

            <action id="com.github.burkclik.asplugin.module.action.DetektCheckAction"
                    class="com.github.burkclik.asplugin.module.action.DetektCheckAction"
                    text="Run Detekt Gradle Task">
            </action>

            <action id="com.github.burkclik.asplugin.module.action.CleanAction"
                    class="com.github.burkclik.asplugin.module.action.CleanAction"
                    text="Run Clean Gradle Task">
            </action>

            <action id="com.github.burkclik.asplugin.module.action.AssembleDebugAction"
                    class="com.github.burkclik.asplugin.module.action.AssembleDebugAction"
                    text="Run Assemble Debug Gradle Task">
            </action>
            <action id="com.github.burkclik.asplugin.module.action.ProjectHealthAction"
                    class="com.github.burkclik.asplugin.module.action.ProjectHealthAction"
                    text="Run ProjectHealth Gradle Task">
            </action>
            <action id="com.github.burkclik.asplugin.module.action.AssertMaxHeightAction"
                    class="com.github.burkclik.asplugin.module.action.AssertMaxHeightAction"
                    text="Run AssertMaxHeightAction Gradle Task">
            </action>
        </group>
        <action id="com.github.burkclik.asplugin.actions.RunUITestAction"
                class="com.github.burkclik.asplugin.actions.RunUITestAction" text="Run UI Test">
            <add-to-group group-id="EditorPopupMenu" anchor="first"/>
        </action>

        <group
                id="org.intellij.sdk.action.GroupedActions"
                text="Trendyol"
                popup="true">
            <add-to-group
                    group-id="ToolsMenu"
                    anchor="after"
                    relative-to-action="com.github.burkclik.asplugin.actions.RunKtlintCheckAction"/>
            <action
                    class="com.github.burkclik.asplugin.actions.RunKtlintCheckAction"
                    id="com.github.burkclik.asplugin.actions.RunKtlintCheckAction"
                    text="Check Ktlint"
                    description="Check ktlint">
            </action>
            <action
                    class="com.github.burkclik.asplugin.actions.RunDetektCheckAction"
                    id="com.github.burkclik.asplugin.actions.RunDetektCheckAction"
                    text="Check Detekt"
                    description="Check detekt">
            </action>
        </group>
    </actions>
</idea-plugin>
